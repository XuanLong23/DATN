<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="5dp"
    android:background="@color/mauNenApp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            style="@style/textview_tieude"
            android:text="Thao tác nhà trọ" />

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:rowCount="2">

            <LinearLayout
                android:id="@+id/taoHopDong"
                style="@style/linear_grid">

                <ImageView
                    style="@style/image_grid"
                    android:src="@drawable/icon_taohopdong" />

                <TextView
                    style="@style/textview_tieude"
                    android:layout_gravity="center"
                    android:text="Tạo hợp đồng" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/quanLyDichVu"
                style="@style/linear_grid">

                <ImageView
                    style="@style/image_grid"
                    android:src="@drawable/icon_dichvu" />

                <TextView
                    style="@style/textview_tieude"
                    android:layout_gravity="center"
                    android:text="Dịch vụ" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/xuLyHopDong"
                style="@style/linear_grid"
                android:layout_marginTop="10dp">

                <ImageView
                    style="@style/image_grid"
                    android:src="@drawable/icon_traphong" />

                <TextView
                    style="@style/textview_tieude"
                    android:layout_gravity="center"
                    android:text="Xử lý hợp đồng" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/taoHoaDon"
                style="@style/linear_grid"
                android:layout_marginTop="10dp">

                <ImageView
                    style="@style/image_grid"
                    android:src="@drawable/icon_taohoadon" />

                <TextView
                    style="@style/textview_tieude"
                    android:layout_gravity="center"
                    android:text="Tạo hóa đơn" />
            </LinearLayout>

        </GridLayout>

        <TextView
            style="@style/textview_tieude"
            android:text="Danh sách quản lý" />

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:rowCount="2">

            <LinearLayout
                android:id="@+id/dsPhongThue"
                style="@style/linear_grid">

                <ImageView
                    style="@style/image_grid"
                    android:src="@drawable/ds_phong" />

                <TextView
                    style="@style/textview_tieude"
                    android:layout_gravity="center"
                    android:text="Danh sách phòng thuê" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/dsKhachThue"
                style="@style/linear_grid">

                <ImageView
                    style="@style/image_grid"
                    android:src="@drawable/list_nguoi_dung" />

                <TextView
                    style="@style/textview_tieude"
                    android:layout_gravity="center"
                    android:text="Danh sách khách thuê" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/dsHoaDon"
                style="@style/linear_grid"
                android:layout_marginTop="10dp">

                <ImageView
                    style="@style/image_grid"
                    android:src="@drawable/list_hoadon" />

                <TextView
                    style="@style/textview_tieude"
                    android:layout_gravity="center"
                    android:text="Danh sách hóa đơn" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/dsHopDong"
                style="@style/linear_grid"
                android:layout_marginTop="10dp">

                <ImageView
                    style="@style/image_grid"
                    android:src="@drawable/list_hop_dong" />

                <TextView
                    style="@style/textview_tieude"
                    android:layout_gravity="center"
                    android:text="Danh sách hợp đồng" />
            </LinearLayout>

        </GridLayout>
    </LinearLayout>

</ScrollView>