<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.ActivityManHinhChinhChuTro">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        app:cardCornerRadius="20dp">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/tbManHinhChinh"
            style="@style/toolBar" />
            
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"
                android:src="@drawable/home_icon"/>
            <TextView
                android:id="@+id/tvTenKhu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="60dp"
                android:paddingTop="5dp"
                android:text="Khu A"
                android:textStyle="bold"
                android:textSize="30dp"
                android:textColor="@color/white"/>
            <androidx.constraintlayout.utils.widget.ImageFilterView
                android:id="@+id/menu_ManHinhChinh"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/menu_icon"
                android:layout_gravity="right"
                android:layout_marginTop="6dp"
                android:layout_marginRight="10dp"/>

    </androidx.cardview.widget.CardView>
    <androidx.viewpager2.widget.ViewPager2
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:id="@+id/viewPager2ManHinhChinh"
        android:layout_marginTop="3dp"/>
    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabLayoutManHinhChinh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tabTextAppearance="@style/CustomTabText"/>

</LinearLayout>