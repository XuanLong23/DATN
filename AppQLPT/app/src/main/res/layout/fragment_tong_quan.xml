<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mauNenApp"
    android:layout_marginBottom="5dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/border_tron_white"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">
            <LinearLayout
                style="@style/line_tonquan">
                <TextView
                    style="@style/tv_TieuDe_tongquan"
                    android:text="Thống kê khu trọ"
                    />
                <TextView
                    style="@style/tv_soLuong_tongquan"
                    android:text="Khu A"
                    android:id="@+id/tvTenKhuTongQuan"
                    />
            </LinearLayout>
            <LinearLayout
                style="@style/line_tonquan"
                >
                <TextView
                    style="@style/tv_TieuDe_tongquan"
                    android:text="Tổng số phòng"
                    />
                <TextView
                    style="@style/tv_soLuong_tongquan"
                    android:id="@+id/tvSoPhongTongQuan"
                    android:text="30"
                    />
            </LinearLayout>
        </LinearLayout>
        <TextView
            style="@style/textview_tieude"
            android:text="Tổng quan phòng"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="italic"
            android:layout_marginLeft="10dp"
            android:textSize="17dp"
            android:text="Tổng quan phòng đang cho thuê"
            />
        <GridLayout
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:rowCount="2">

            <LinearLayout
                android:id="@+id/phongTrong"
                style="@style/linear_grid">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        style="@style/image_grid"
                        android:src="@drawable/icon_homered_tq" />
                    <TextView
                        android:id="@+id/tvPhongTrong"
                        style="@style/textview_tieude"
                        android:textSize="40dp"
                        android:paddingLeft="20dp"
                        android:text="5"
                        />
                </LinearLayout>
                <TextView
                    style="@style/textview_tieude"
                    android:text="Số phòng đang trống"
                    />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/phongDangChoThue"
                style="@style/linear_grid"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        style="@style/image_grid"
                        android:src="@drawable/icon_homegreen_tq" />
                    <TextView
                        android:id="@+id/tvPhongDangThue"
                        style="@style/textview_tieude"
                        android:textSize="40dp"
                        android:paddingLeft="20dp"
                        android:text="25"
                        />
                </LinearLayout>
                <TextView
                    style="@style/textview_tieude"
                    android:text="Số phòng đang thuê" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/phongSapHetHan"
                style="@style/linear_grid"
                android:layout_marginTop="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        style="@style/image_grid"
                        android:src="@drawable/icon_oclock_tq" />
                    <TextView
                        android:id="@+id/tvPhongSapHetHanHD"
                        style="@style/textview_tieude"
                        android:textSize="40dp"
                        android:paddingLeft="20dp"
                        android:text="25"
                        />
                </LinearLayout>
                <TextView
                    style="@style/textview_tieude"
                    android:text="Số phòng sắp hết hợp đồng" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/phongChuaDongTien"
                style="@style/linear_grid"
                android:layout_marginTop="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        style="@style/image_grid"
                        android:src="@drawable/icon_price_tq" />
                    <TextView
                        android:id="@+id/sl_PhongChuaDongTien"
                        style="@style/textview_tieude"
                        android:textSize="40dp"
                        android:paddingLeft="20dp"
                        android:text="25"
                        />
                </LinearLayout>
                <TextView
                    style="@style/textview_tieude"
                    android:text="Số phòng chưa đóng tiền" />
            </LinearLayout>
        </GridLayout>

    </LinearLayout>


</ScrollView>