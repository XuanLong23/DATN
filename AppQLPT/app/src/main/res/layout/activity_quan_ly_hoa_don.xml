<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.ActivityQuanLyHoaDon">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/tbDanhSachPhong"
        style="@style/toolBar"
        app:title="Quản Lý Hóa Đơn"
        />
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnCount="2"
        android:rowCount="2">

        <LinearLayout
            android:id="@+id/dsHoaDon"
            android:orientation="vertical"
            android:layout_width="180dp"
            android:layout_height="200dp"
            android:layout_marginTop="30dp">

            <ImageView
                style="@style/image_grid"
                android:src="@drawable/list_hoadon" />

            <TextView
                style="@style/textview_tieude"
                android:text="Danh sách hóa đơn" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/taoHoaDon"
            android:orientation="vertical"
            android:layout_width="180dp"
            android:layout_height="200dp"
            android:layout_marginTop="30dp">

            <ImageView
                style="@style/image_grid"
                android:src="@drawable/icon_taohoadon" />

            <TextView
                style="@style/textview_tieude"
                android:text="Tạo hóa đơn"
                />
        </LinearLayout>

    </GridLayout>
</LinearLayout>