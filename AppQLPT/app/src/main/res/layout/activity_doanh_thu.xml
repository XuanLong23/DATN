<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mauNenApp"
    android:orientation="vertical">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/tbDoanhThu"
        style="@style/toolBar"
        app:title="Doanh Thu"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Chọn ngày đầu"
                    android:layout_gravity="center"
                    android:textColor="@color/black"
                    android:textSize="17dp"
                    android:padding="4dp"
                    android:textStyle="bold"
                    />
                <androidx.cardview.widget.CardView
                    android:id="@+id/CardViewchonNgayBatDauDoanhThu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="17dp"
                    android:layout_marginBottom="5dp"
                    android:backgroundTint="@color/maunenedt"
                    app:cardCornerRadius="5dp">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imgNgayBatDauDoanhThu"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center"
                            android:layout_margin="3dp"
                            android:src="@drawable/icon_ngay" />

                        <EditText
                            android:id="@+id/edNgayBatDauDoanhThu"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:padding="3dp"
                            android:enabled="false"
                            android:textSize="19dp"
                            android:hint="dd-MM-yyyy"
                            android:textColor="@color/black" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Chọn ngày cuối"
                    android:layout_gravity="center"
                    android:textColor="@color/black"
                    android:textSize="17dp"
                    android:padding="4dp"
                    android:textStyle="bold"
                    />
                <androidx.cardview.widget.CardView
                    android:id="@+id/CardViewNgayKetThucDoanhThu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="23dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="5dp"
                    android:backgroundTint="@color/maunenedt"
                    app:cardCornerRadius="5dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imgNgayKetThucDoanhThu"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center"
                            android:layout_margin="3dp"
                            android:src="@drawable/icon_ngay" />

                        <EditText
                            android:id="@+id/edNgayKetThucDoanhThu"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:enabled="false"
                            android:textSize="19dp"
                            android:hint="dd-MM-yyyy"
                            android:padding="3dp"
                            android:textColor="@color/black" />


                    </LinearLayout>

                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/lnDoanhThu"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerDoanhThu"
            android:layout_width="match_parent"
            android:layout_weight="1"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:layout_height="0dp"
            android:layout_marginTop="3dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="3dp"
        android:background="@color/white"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btnTongDoanhThu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Tổng"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:text="Tổng tiền"
                android:layout_marginRight="10dp"
                android:textColor="@color/black"
                android:textSize="17sp"
                android:paddingLeft="10dp"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:layout_height="wrap_content"/>
            <TextView
            android:id="@+id/tvTongDoanhThu"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:text=" 0 đ"
            android:layout_marginRight="10dp"
            android:textColor="#ED061F"
            android:textSize="20sp"
                android:paddingLeft="10dp"
            android:layout_height="wrap_content"/>
        </LinearLayout>



    </LinearLayout>


</LinearLayout>