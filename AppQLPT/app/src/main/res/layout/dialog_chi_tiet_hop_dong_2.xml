<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/mauNenApp"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/layoutTenDichVu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/mauchinhapp"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:text="Chi Tiết Hợp Đồng"
            android:textColor="@color/white"
            android:textSize="25dp"
            android:textStyle="bold" />
    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:cardCornerRadius="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tvMaPhong"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18dp"
                    android:textColor="#686666"
                    android:textStyle="italic"
                    android:text="#PH29041"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="2dp"/>
                <TextView
                    android:id="@+id/tvNgay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18dp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:text="03/2023"
                    android:layout_marginLeft="160dp"
                    android:layout_marginTop="2dp"/>
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/icon_ngay"
                    android:layout_marginLeft="10dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18dp"
                    android:text="Phòng:"
                    android:layout_marginLeft="10dp"/>
                <TextView
                    android:id="@+id/tvTenPhong"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:text="A101"
                    android:layout_marginLeft="10dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18dp"
                    android:text="Chủ hợp đồng:"
                    android:layout_marginLeft="10dp"/>
                <TextView
                    android:id="@+id/tvTenChuHopDong"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:text="Nguyễn Cao Cường"
                    android:layout_marginLeft="10dp"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:cardCornerRadius="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:text="Thông tin hợp đồng"
                android:layout_marginLeft="10dp"/>
            <TextView
                android:id="@+id/tvThongTin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:text="Thông tin chi tiết về hợp đồng của phòng A101"
                android:layout_marginLeft="10dp"/>
            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@color/black"
                android:layout_marginTop="10dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ngày bắt đầu ở"
                        android:textSize="18dp"
                        android:layout_marginLeft="20dp"/>
                    <TextView
                        android:id="@+id/tvNgayO"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="21/02/2003"
                        android:textSize="18dp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:layout_marginLeft="20dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ngày kết thúc"
                        android:textSize="18dp"
                        android:layout_marginLeft="10dp"
                        />
                    <TextView
                        android:id="@+id/tvNgayKetThuc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="20/03/2003"
                        android:textSize="18dp"
                        android:textStyle="bold"
                        android:textColor="@color/black"

                        android:layout_marginLeft="10dp"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Thời hạn:"
                        android:textSize="18dp"
                        android:layout_marginLeft="20dp"/>
                    <TextView
                        android:id="@+id/tvThoiHan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3 tháng"
                        android:textSize="18dp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:layout_marginLeft="10dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tiền cọc"
                        android:textSize="18dp"
                        android:layout_marginLeft="10dp"
                        />
                    <TextView
                        android:id="@+id/tvTienCoc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="200.000"
                        android:textSize="18dp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:layout_marginLeft="10dp"/>
                </LinearLayout>
            </LinearLayout>
            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@color/black"
                android:layout_marginTop="10dp"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <CheckBox
                    android:id="@+id/chkThoiHan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Còn hạn"
                    android:layout_marginLeft="10dp"
                    android:textSize="16dp"
                    android:clickable="false"
                    android:padding="3dp"/>

                <CheckBox
                    android:id="@+id/chkHieuLuc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Còn hiệu lực"
                    android:layout_marginLeft="50dp"
                    android:textSize="16dp"
                    android:clickable="false"
                    android:padding="3dp"/>
            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <Button
        android:id="@+id/btnDong"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Đóng"
        android:layout_marginBottom="10dp"/>

</LinearLayout>