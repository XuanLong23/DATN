<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.ActivityQuanLyHopDong">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/tbDanhSachPhong"
        style="@style/toolBar"
        app:title="Quản Lý Hợp Đồng"
        />
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnCount="2"
        android:rowCount="2">

        <LinearLayout
            android:id="@+id/dsHopDong"
            android:orientation="vertical"
            android:layout_width="180dp"
            android:layout_height="200dp"
            android:layout_marginTop="30dp">

            <ImageView
                style="@style/image_grid"
                android:src="@drawable/list_hop_dong" />

            <TextView
                style="@style/textview_tieude"
                android:text="Danh sách hợp đồng" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/taoHopDong"
            android:orientation="vertical"
            android:layout_width="180dp"
            android:layout_height="200dp"
            android:layout_marginTop="30dp">

            <ImageView
                style="@style/image_grid"
                android:src="@drawable/icon_taohopdong" />

            <TextView
                style="@style/textview_tieude"
                android:text="Tạo hợp đồng"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/TraPhong"
            android:orientation="vertical"
            android:layout_width="180dp"
            android:layout_height="200dp"
            android:layout_marginTop="30dp">

            <ImageView
                style="@style/image_grid"
                android:src="@drawable/icon_traphong" />

            <TextView
                style="@style/textview_tieude"
                android:text="Xử lý hợp đồng" />
        </LinearLayout>
    </GridLayout>
</LinearLayout>