<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lnPhong"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_margin="5dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/linnerLayoutItemPhong"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/imgPhong"
                android:layout_width="70dp"
                android:layout_height="80dp"
                android:src="@drawable/img_phong"
                android:layout_gravity="center"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tvTenPhong"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:text="Phòng: A101"
                    android:textColor="@color/black"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tvGioiHanNguoiO"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tối đa: 5 người"
                        android:textColor="@color/black"/>
                    <TextView
                        android:id="@+id/tvSoNguoiHienTai"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="50dp"
                        android:text="Có 2 người đang ở"
                        android:textColor="@color/black"/>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/img_gia_thue"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Giá thuê:"
                        android:textSize="20dp"
                        android:textColor="@color/black"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"/>
                    <TextView
                        android:id="@+id/tvGiaThue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2.500.000 vnđ"
                        android:textSize="20dp"
                        android:textColor="#ED061F"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <CheckBox
                        android:id="@+id/chkTrangThaiPhongTrong"
                        style="@style/chk_trang_thai"
                        android:text="Đang trống"
                        android:clickable="false"
                        android:textColor="#0736DC"
                        />
                    <CheckBox
                        android:id="@+id/chkTrangThaiPhongDaCoc"
                        style="@style/chk_trang_thai"
                        android:text="Đang ở"
                        android:textColor="#DC0727"
                        android:clickable="false"
                        android:layout_marginLeft="20dp"

                        />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>